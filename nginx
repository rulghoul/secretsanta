upstream santa_server {
  server unix:/var/www/python/secretsanta/run/gunicorn.sock fail_timeout=0;
}

server {
    listen   80;
    server_name intercambio.ghoulrul.online;

    client_max_body_size 4G;

    access_log /var/www/python/santa/logs/nginx-access.log;
    error_log /var/www/python/santa/logs/nginx-error.log;

    location /static {
        alias   /var/www/python/secretsanta/santa/static/;
    }

    location /media {
        alias   /var/www/python/secretsanta/santa/media/;
    }

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        if (!-f $request_filename) {
            proxy_pass http://santa_server;
            break;
        }
    }
}

